@{
    ViewData["Title"] = "Home";
}

<div class="home-container d-flex flex-column justify-content-center align-items-center min-vh-100 text-light text-center px-3">
    <h1 class="display-5 fw-bold mb-3">
        <i class="fas fa-futbol text-primary me-2"></i>Bem-vindo ao <span class="text-light">FutOrganizer</span>
    </h1>

    <hr class="border-light opacity-25 mb-4" style="width: 200px;">

    <div class="home-card p-4 rounded shadow-lg animate__animated animate__fadeInUp"
         style="max-width: 360px; width: 100%; background-color: #222230;">
        <div class="button-group d-grid gap-3 w-100">

            <!-- Criar nova sala com link compartilhável -->
            <form id="formCriarSala" method="post" action="/Sorteio/CriarSala">
                <button type="submit" class="btn btn-home shadow-sm" title="Crie uma sala com link para convidados">
                    <i class="fas fa-plus me-2"></i> Criar Sala
                </button>
            </form>

            <!-- Ver todas as salas já criadas -->
            <a href="/Sorteio/MinhasSalas" class="btn btn-home shadow-sm" title="Visualize todas as salas criadas por você">
                <i class="fas fa-list me-2"></i> Minhas Salas
            </a>

            <!-- Minhas participações em lobbys criados por outros -->
            <a href="/Sorteio/MinhasParticipacoes" class="btn btn-home shadow-sm" title="Salas onde você entrou como convidado">
                <i class="fas fa-door-open me-2"></i> Meus Lobbys
            </a>

            <!-- Sorteio rápido (fluxo atual) -->
            <a href="/Sorteio" class="btn btn-home shadow-sm" title="Clique para sortear os times">
                <i class="fas fa-random me-2"></i> Sorteio Rápido
            </a>

            <!-- Histórico de partidas já finalizadas -->
            <a href="/Sorteio/Historico" class="btn btn-home shadow-sm" title="Veja partidas anteriores">
                <i class="fas fa-history me-2"></i> Histórico de Partidas
            </a>

            <!-- Cronômetro para o jogo -->
            <a href="/Cronometro" class="btn btn-home shadow-sm" title="Abrir cronômetro para partidas">
                <i class="fas fa-stopwatch me-2"></i> Cronômetro
            </a>

            <!-- Meus Dados -->
            <a href="/Usuario/MeusDados" class="btn btn-home shadow-sm" title="Editar suas informações e senha">
                <i class="fas fa-user-cog me-2"></i> Meus Dados
            </a>

            <!-- Logout -->
            <a href="/Login/Logout" class="btn btn-home logout shadow-sm" title="Sair do sistema">
                <i class="fas fa-sign-out-alt me-2"></i> Logout
            </a>
        </div>
    </div>
</div>
