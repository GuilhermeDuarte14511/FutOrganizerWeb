@model FutOrganizerWeb.Domain.Entities.Usuario

@{
    ViewData["Title"] = "Meus Dados";
}

<div id="meusDadosPage" class="d-flex justify-content-center align-items-center min-vh-100 bg-dark text-light px-3">
    <div class="card p-4 shadow-lg border-0 w-100 animate__animated animate__fadeInUp"
         style="max-width: 500px; background-color: var(--card-bg); border: 1px solid var(--border-color); box-shadow: var(--card-shadow);">

        <div class="text-center mb-4">
            <i class="fas fa-user-cog fa-3x text-primary mb-3"></i>
            <h2 class="fw-bold text-white">Meus Dados</h2>
            <p class="text-light">Atualize suas informações e senha.</p>
        </div>

        <!-- Formulário único -->
        <form id="formSalvarTudo" class="mb-4">
            <!-- Nome -->
            <div class="mb-3">
                <label for="nome" class="form-label text-light">Nome</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input type="text" class="form-control" id="nome" placeholder="Seu nome" required value="@Model.Nome">
                </div>
            </div>

            <!-- E-mail (somente leitura) -->
            <div class="mb-3">
                <label for="email" class="form-label text-light">E-mail</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input type="email" class="form-control" id="email" readonly value="@Model.Email" />
                </div>
            </div>

            <!-- Senha Atual -->
            <div class="mb-3">
                <label for="senhaAtual" class="form-label text-light">Senha Atual</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" class="form-control" id="senhaAtual" placeholder="Senha atual">
                    <button type="button" class="btn btn-outline-secondary toggle-visibility" data-target="senhaAtual" tabindex="-1">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
            </div>

            <!-- Nova Senha -->
            <div class="mb-3">
                <label for="novaSenha" class="form-label text-light">Nova Senha</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" class="form-control" id="novaSenha" placeholder="Nova senha">
                    <button type="button" class="btn btn-outline-secondary toggle-visibility" data-target="novaSenha" tabindex="-1">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
            </div>

            <!-- Botão Único -->
            <button type="submit" class="btn btn-primary w-100 fw-bold d-flex justify-content-center align-items-center gap-2">
                <i class="fas fa-save"></i>
                <span>Salvar Alterações</span>
            </button>
        </form>

        <!-- Botão Voltar -->
        <div class="text-center mt-3">
            <a href="/Home" class="btn btn-outline-light w-100 d-flex justify-content-center align-items-center gap-2">
                <i class="fas fa-arrow-left"></i>
                <span>Voltar para o menu</span>
            </a>
        </div>
    </div>
</div>
