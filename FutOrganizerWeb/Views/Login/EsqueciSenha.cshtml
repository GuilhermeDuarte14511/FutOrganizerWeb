@{
    ViewData["Title"] = "Esqueci minha senha";
}

<div id="esqueciSenhaPage" class="d-flex justify-content-center align-items-center min-vh-100 bg-dark text-light px-3" data-aos="fade-in">
    <div class="card p-4 shadow-lg border-0 w-100" style="max-width: 400px; background-color: var(--card-bg); border: 1px solid var(--border-color); box-shadow: var(--card-shadow); animation: fadeInUp 0.8s ease;">
        <div class="text-center mb-4">
            <i class="fas fa-envelope-open-text fa-3x text-primary mb-3"></i>
            <h2 class="fw-bold text-white">Recuperar Senha</h2>
            <p class="text-light">Informe seu e-mail para receber instruções.</p>
        </div>

        <form id="formEsqueciSenha">
            <!-- E-mail -->
            <div class="mb-3 position-relative">
                <label for="emailRecuperacao" class="form-label text-light">E-mail</label>
                <div class="input-group">
                    <span class="input-group-text bg-transparent border-secondary text-light">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <input type="email" class="form-control bg-dark text-light border-secondary" id="emailRecuperacao" placeholder="nome@exemplo.com" required />
                </div>
            </div>

            <button id="btnEnviarEmail" type="submit" class="btn btn-primary w-100 fw-bold d-flex justify-content-center align-items-center gap-2">
                <span id="btnIconEsqueci"><i class="fas fa-paper-plane"></i></span>
                <span id="btnTextEsqueci">Enviar instruções</span>
                <div id="btnSpinnerEsqueci" class="spinner-border spinner-border-sm text-light d-none" role="status" aria-hidden="true"></div>
            </button>

            <div class="text-center mt-3">
                <a href="/Login" class="text-info small">Voltar para o login</a>
            </div>
        </form>
    </div>
</div>
